@using K9.Base.WebApplication.Helpers
@model User

@Html.PopupAlert()

@using (Html.BeginForm("UpdateAccount", "Account"))
{
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Username)
    @Html.HiddenFor(model => model.EmailAddress)
    @Html.Hidden("Password", "th1515n0tmypa55w0rd")
    @Html.BootstrapEditorFor(model => model.FirstName)
    @Html.BootstrapEditorFor(model => model.LastName)
    @Html.BootstrapEditorFor(model => model.PhoneNumber)
    @Html.BootstrapEditorFor(model => model.BirthDate)
    @Html.BootstrapEditorFor(model => model.Gender)
    if (!Model.IsOAuth)
    {
        <span>@Html.ActionLink(K9.Base.Globalisation.Dictionary.ChangePassword, "UpdatePassword")</span>
    }
    <hr />
    @Html.BootstrapButton(K9.Base.Globalisation.Dictionary.Update)
    @Html.BootstrapActionLinkButton(K9.Base.Globalisation.Dictionary.DeleteMyAccount, "ConfirmDeleteAccount", "Account", new { id = Model.Id }, "", EButtonClass.Danger)
}