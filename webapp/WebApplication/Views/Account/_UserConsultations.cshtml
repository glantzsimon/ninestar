@using K9.Base.WebApplication.Helpers
@model List<UserConsultation>

@using (Html.BeginForm())
{
    using (Html.BeginBootstrapForm())
    {
        <h5 class="margin-0">@Dictionary.YourConsultations</h5>
        <hr />

        <div class="row">
            <div class="col-sm-3">
                @Html.Label(Dictionary.StatusLabel)
            </div>
            <div class="col-sm-3">
                @Html.LabelFor(e => Model[0].Consultation.Duration)
            </div>
            <div class="col-sm-6">
            </div>
        </div>

        <hr />

        for (int i = 0; i < Model.Count; i++)
        {
            <div class="row">
                <div class="col-sm-3">
                    @if (Model[i].Consultation.ScheduledOnLocalTime.HasValue)
                    {
                        @Html.DisplayFor(e => Model[i].Consultation.ScheduledOnLocalTime)
                    }
                    else
                    {
                        <spans>Unscheduled</spans>
                    }
                </div>
                <div class="col-sm-3">
                    @Html.DisplayFor(e => Model[i].Consultation.DurationDescription)
                </div>
                <div class="col-sm-6">
                    @if (!Model[i].Consultation.ScheduledOnLocalTime.HasValue)
                    {
                        <a href="@Url.Action("ScheduleConsultation", "Consultation", new {consultationId = Model[i].ConsultationId})">
                            @Dictionary.ScheduleYourAppointment
                        </a>
                    }
                </div>
            </div>

            <hr />
        }
    }
}