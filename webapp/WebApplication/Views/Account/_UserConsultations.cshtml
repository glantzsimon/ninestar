@using K9.Base.WebApplication.Helpers
@model List<UserConsultation>

@using (Html.BeginForm())
{
    using (Html.BeginBootstrapForm())
    {
        <div class="row">
            <div class="col-sm-4">
                @Html.LabelFor(e => Model[0].Consultation.ScheduledOn)
            </div>
            <div class="col-sm-4">
                @Html.LabelFor(e => Model[0].Consultation.CompletedOn)
            </div>
            <div class="col-sm-4">
                @Html.LabelFor(e => Model[0].Consultation.Duration)
            </div>
        </div>

        <hr />

        for (int i = 0; i < Model.Count; i++)
        {
            <div class="row">
                <div class="col-sm-4">
                    @if (Model[i].Consultation.ScheduledOn.HasValue)
                    {
                        @Html.DisplayFor(e => Model[i].Consultation.ScheduledOn)
                    }
                    else
                    {
                        <a href="@Url.Action("ScheduleConsultation", "Consultation", new {consultationId = Model[i].ConsultationId})">
                            @Dictionary.ScheduleYourAppointment)
                        </a>
                    }
                </div>
                <div class="col-sm-4">
                    @Html.DisplayFor(e => Model[i].Consultation.CompletedOn)
                </div>
                <div class="col-sm-4">
                    @Html.DisplayFor(e => Model[i].Consultation.Duration)
                </div>
            </div>

            <hr />
        }
    }
}