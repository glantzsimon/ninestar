@using K9.Base.WebApplication.Helpers
@model Article
@{
    Layout = "../Shared/_LayoutFormSmall.cshtml";
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    using (Html.BeginBootstrapForm())
    {
        @Html.HiddenFor(model => model.Id)
        @Html.Partial("_EditFields")
        <hr />
        @Html.BootstrapButton(K9.Base.Globalisation.Dictionary.Update, EButtonType.Submit, "fa-save")
        @Html.BootstrapBackToListButton()
        
        @Html.BootstrapActionLinkButton(Dictionary.Publish, "Publish", "Articles", new { id = Model.Id })
        
    }
}