@model K9.WebApplication.Models.NineStarKiModel
@using K9.WebApplication.Helpers

@{
    ViewBag.Title = Dictionary.BiorhythmsLabel;
    ViewBag.SubTitle = Dictionary.BiorhythmsLabel;

    Layout = "../Shared/_LayoutFormMedium.cshtml";
}

@Html.Partial("_BetaPopup")

<div class="container main-content margin-bottom-0">
    <div class="row">
        <div class="col-md-3 col-sm-3 padding-0">
            @Html.Partial("_CalculatorForm", Model)
        </div>
        <div class="col-md-9 col-sm-9 padding-left-20-desktop padding-right-0 mobile panel-margin-top-20">
            @if (Model != null && Model.IsProcessed)
            {
                <div class="well padding-bottom-0">
                    <div class="row">
                        <div class="col-sm-12 padding-0">
                            @if (Model.SelectedDate != DateTime.Today)
                            {
                                @Html.Partial("_SelectedDateAndPeriodTitle")
                            }
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 padding-0">
                            @Html.Partial("_DateSelector")
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="margin-bottom-20">
                    @Html.Panel(Dictionary.WhatAreBiorhythms, Dictionary.biorhythms, "biorhythms")
                </div>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12 padding-0">
            <article>
                @if (Model != null && Model.IsProcessed)
                {
                    @Html.Panel(Dictionary.BiorhythmsDetails, Html.Partial("_BiorhythmsPills", Model).ToString())
                }
            </article>
        </div>
    </div>
</div>
