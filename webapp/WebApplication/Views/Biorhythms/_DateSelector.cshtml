@model K9.WebApplication.Models.BioRhythmsModel

@using (Html.BeginForm("Index", "Biorhythms", FormMethod.Post))
{
    using (Html.BeginBootstrapForm())
    {
        @Html.HiddenFor(model => model.PersonModel.Name)
        @Html.HiddenFor(model => model.PersonModel.DateOfBirth)
        @Html.HiddenFor(model => model.PersonModel.Gender)
        
        <div class="row padding-0 margin-0">
            <div class="col-sm-12">
                @Html.BootstrapEditorFor(model => model.SelectedDate)
            </div>
            <div class="col-sm-12">
                @Html.BootstrapButton(Dictionary.ViewBiorhythmsForSelectedDate, EButtonType.Submit, "")
            </div>
        </div>
    }
}