@using K9.SharedLibrary.Helpers.Html
@model Article
@{
    ViewBag.Title = Model.Title;
    ViewBag.SubTitle = Model.Title;
    Layout = "../Shared/_LayoutFormWide.cshtml";

    var tags = ViewBag.AllTags as List<string>;
}

<div class="container" style="margin-top: 40px;">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <h1>@Model.Title</h1>
            <p class="text-muted">
                <small>@Dictionary.PublishedOnLabel @Model.PublishedOnText</small>
            </p>

            <div style="margin-top: 20px; margin-bottom: 20px;">
                @foreach (var tag in Model.Tags)
                {
                    <span class="label label-info" style="margin-right: 5px;">#@tag.Name</span>
                }
            </div>

            <hr />

            <div class="article-body" style="margin-top: 30px;">
                @Html.Raw(Model.HtmlBody)
            </div>

            <hr />

            @Html.BootstrapBackToListButton()
        </div>
    </div>
</div>