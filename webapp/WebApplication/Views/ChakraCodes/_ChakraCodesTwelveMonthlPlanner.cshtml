@using K9.WebApplication.Enums
@using K9.WebApplication.Helpers
@using K9.WebApplication.Models
@model K9.WebApplication.Models.ChakraCodesModel

<div class="well">
    <h2>Yearly Outlook</h2>
    <div class="row" id="monthly-forecast-container">
        @foreach (var code in Model.MonthlyPlannerCodes)
        {
            <div class="col-xs-4 col-sm-3 col-md-2 month-chakra-code-container @code.IsCurrentCssClass">
                <div>
                    <strong>@code.Month.ToString("MMM")</strong>
                </div>
                <p>
                    @Html.Partial("_ChakraCodeSmall", new ChakraCodeDetails
                    {
                        ChakraCode = code.ChakraCode,
                        Type = EForecastType.Monthly,
                        Offset = code.Offset
                    })
                </p>
                <p>@code.StartDate.ToShortDateString() - @code.EndDate.ToShortDateString()</p>
            </div>
        }
    </div>
    <div class="row margin-top-30">
        <div class="col-xs-12">
            @Html.CollapsiblePanel(Model.MonthlyForecast.Title, Model.MonthlyForecast.Forecast, true, "", "monthly-forecast")
        </div>
    </div>
</div>