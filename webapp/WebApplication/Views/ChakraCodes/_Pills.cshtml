@using K9.SharedLibrary.Extensions
@using K9.WebApplication.Config
@using K9.WebApplication.Enums
@using K9.WebApplication.Extensions
@using K9.WebApplication.Helpers
@using K9.WebApplication.Models
@model K9.WebApplication.Models.ChakraCodesModel

<div class="ninestar-summmary container padding-0">
    <ul class="nav nav-pills nav-justified image-pill">
        <li class="active">
            <a data-toggle="tab" href="#main">
                @Dictionary.MainKarmicBlueprint
                <div class="img-rounded image-pill" style="background-image: url('@DefaultValuesConfiguration.Instance.BaseImagesPath/ui/overview.png');"></div>
            </a>
        </li>

        <li>
            <a data-toggle="tab" href="#evolution">
                @Dictionary.KarmicEvolution
                <div class="img-rounded image-pill" style="background-image: url('@DefaultValuesConfiguration.Instance.BaseImagesPath/ui/monthly-planner.png');"></div>
            </a>
        </li>

        <li>
            <a data-toggle="tab" href="#twelve-year-outlook">
                @Dictionary.TwelveYearKarmicOutlook
                <div class="img-rounded image-pill" style="background-image: url('@DefaultValuesConfiguration.Instance.BaseImagesPath/ui/in-depth-analysis.png');"></div>
            </a>
        </li>

        <li>
            <a data-toggle="tab" href="#twelve-month-outlook">
                @Dictionary.TwelveMonthKarmicOutlook
                <div class="img-rounded image-pill" style="background-image: url('@DefaultValuesConfiguration.Instance.BaseImagesPath/ui/in-depth-analysis.png');"></div>
            </a>
        </li>

        <li>
            <a data-toggle="tab" href="#daily-outlook">
                @Dictionary.DailyKarmicInfluences
                <div class="img-rounded image-pill" style="background-image: url('@DefaultValuesConfiguration.Instance.BaseImagesPath/ui/in-depth-analysis.png');"></div>
            </a>
        </li>
    </ul>

    <div class="tab-content">
        <div id="main" class="tab-pane fade in active padding-top-10">

            <hr />
            @Html.Partial("_ButtonsFooter")
        </div>

        <div id="evolution" class="tab-pane fade padding-top-10">
            @using (Html.PayWall(ESection.Predictions, Model))
            {
                @Html.Partial("_ChakraCodesMain")
            }

            <br />
            @Html.Partial("_ButtonsFooter")
        </div>

        <div id="twelve-year-outlook" class="tab-pane fade padding-top-10">
            @using (Html.PayWall(ESection.Predictions, Model))
            {
                @Html.Partial("_ChakraCodesTwelveYearPlanner")
            }

            <br />
            @Html.Partial("_ButtonsFooter")
        </div>

        <div id="twelve-month-outlook" class="tab-pane fade padding-top-10">
            @using (Html.PayWall(ESection.Predictions, Model))
            {
                @Html.Partial("_ChakraCodesTwelveMonthlPlanner")
            }

            <br />
            @Html.Partial("_ButtonsFooter")
        </div>

        <div id="daily-outlook" class="tab-pane fade padding-top-10">
            @using (Html.PayWall(ESection.Predictions, Model))
            {
                @Html.Partial("_ChakraCodesDailyPlanner")
            }

            <br />
            @Html.Partial("_ButtonsFooter")
        </div>
    </div>
</div>
