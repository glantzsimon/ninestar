@model K9.WebApplication.Models.CompatibilityModel

@using (Html.BeginForm("Index", "Compatibility", FormMethod.Post))
{
    using (Html.BeginBootstrapForm())
    {
        <div class="row">
            <div class="col-sm-6">
                <h4 class="margin-top-0">@Dictionary.FirstPerson</h4>
                <div class="col-sm-12">
                    @Html.BootstrapEditorFor(model => model.NineStarKiModel1.PersonModel.Name)
                </div>
                <div class="col-sm-12">
                    @Html.BootstrapEditorFor(model => model.NineStarKiModel1.PersonModel.DateOfBirth)
                </div>
                <div class="col-sm-12">
                    @Html.BootstrapEditorFor(model => model.NineStarKiModel1.PersonModel.TimeOfBirth)
                </div>
                <div class="col-sm-12">
                    @Html.BootstrapEditorFor(model => model.NineStarKiModel1.PersonModel.BirthTimeZoneId)
                </div>
                <div class="col-sm-12">
                    <div data-toggle="tooltip" data-placement="top" title="@Dictionary.GenderSelectionTooltip">
                        @Html.BootstrapEditorFor(model => model.NineStarKiModel1.PersonModel.Gender)
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <h4 class="margin-top-0">@Dictionary.SecondPerson</h4>
                <div class="col-sm-12">
                    @Html.BootstrapEditorFor(model => model.NineStarKiModel2.PersonModel.Name)
                </div>
                <div class="col-sm-12">
                    @Html.BootstrapEditorFor(model => model.NineStarKiModel2.PersonModel.DateOfBirth)
                </div>
                <div class="col-sm-12">
                    @Html.BootstrapEditorFor(model => model.NineStarKiModel2.PersonModel.TimeOfBirth)
                </div>
                <div class="col-sm-12">
                    @Html.BootstrapEditorFor(model => model.NineStarKiModel2.PersonModel.BirthTimeZoneId)
                </div>
                <div class="col-sm-12">
                    <div data-toggle="tooltip" data-placement="top" title="@Dictionary.GenderSelectionTooltip">
                        @Html.BootstrapEditorFor(model => model.NineStarKiModel2.PersonModel.Gender)
                    </div>
                </div>
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-sm-4 col-xs-12 padding-0">
                <label>@Dictionary.CalculationMethodLabel</label>
                <a target="_blank" href="@Url.Action("CalculationMethods","Home")"><i class="fa fa-question-circle"></i></a>

                @Html.BootstrapEditorFor(model => model.NineStarKiModel1.CalculationMethod, new EditorOptions
                {
                    Label = ""
                })
            </div>
        </div>

        @Html.BootstrapEditorFor(e => e.IsHideSexualChemistry)
        @Html.BootstrapButton(Dictionary.Calculate, EButtonType.Submit, "", EButtonClass.Large)
    }
}