@model Student
@{
	ViewBag.Title = string.Format("Enrollment {0}", Dictionary.Details);
	Layout = "~/Views/Shared/_LayoutForm.cshtml";
}
@using (Html.BeginForm())
{
	using (Html.BeginBootstrapForm())
	{
	@Html.HiddenFor(model => model.Id)
	@Html.Partial("_DisplayFields")
	@Html.AuditFieldsForModel(Model)
	
	@Html.SubTitle(Dictionary.AdditionalInformation)
	@Html.BootstrapLinkButton("Enrollments", "ForStudent", "Enrollments", new { StudentId = Model.Id })

	<hr />
	@Html.BootstrapBackToListButton()
	}
}