@model K9.WebApplication.Models.NineStarKiModel

@{
    ViewBag.Title = K9.Base.Globalisation.Dictionary.Home;
    ViewBag.SubTitle = Dictionary.WelcomeSubTitle;
    Layout = "../Shared/_LayoutFormMedium.cshtml";
}

<style>
    article h4 {
        margin-top: 0;
    }
</style>

@Html.Partial("_BetaPopup")

<div class="container main-content">
    <div class="well margin-bottom-0">
        <div class="row">
            <div class="col-md-4 col-sm-3 padding-0">
                @Html.Partial("../PersonalChart/_CalculatorForm", Model)
            </div>
            <div class="col-md-8 col-sm-9 padding-left-20-desktop padding-right-0 mobile panel-margin-top-20">
                <article>
                    @MvcHtmlString.Create(Dictionary.welcome)
                </article>
            </div>
        </div>
    </div>
    <hr />
    @Html.Partial("_ButtonsFooter")
</div>