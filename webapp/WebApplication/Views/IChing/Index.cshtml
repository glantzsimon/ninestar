@model K9.WebApplication.ViewModels.IChingViewModel
@using K9.WebApplication.Helpers

@{
    ViewBag.Title = Dictionary.IChing;
    ViewBag.SubTitle = Dictionary.ConsultTheIChing;
    ViewBag.MetaDescription = Dictionary.IChingMeta;
    ViewBag.Keywords = Dictionary.IChingKeywords;

    Layout = "../Shared/_LayoutFormMedium.cshtml";
}

@Html.Partial("_BetaPopup")

<div class="container main-content margin-bottom-0">
    <article>
        <div class="col-md-3 col-sm-3 padding-0">
            @Html.Partial("_GenerateButtonForm")
        </div>
        <div class="col-md-9 col-sm-9 padding-left-20-desktop padding-right-0 mobile panel-margin-top-20">
            @if (Model != null && Model.Hexagram != null)
            {
                var hexagramTitle = Model.TransformedHexagram == null ? Dictionary.YourHexagram : Dictionary.MainHexagram;

                @Html.Panel(hexagramTitle, Html.Partial("_HexagramResult", Model.Hexagram).ToString())

                if (Model.TransformedHexagram != null)
                {
                    @Html.Panel(Dictionary.TransformedHexagram, Html.Partial("_HexagramResult", Model.TransformedHexagram).ToString())
                }

                <br />
            }
            else
            {
                <div class="margin-bottom-20">
                    @Html.Panel(Dictionary.AboutTheIChing, Dictionary.i_ching_info)
                </div>
            }
        </div>
    </article>
</div>

<hr class="margin-top-0" />
@Html.Partial("_ButtonsFooter")

