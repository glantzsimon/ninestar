@using K9.SharedLibrary.Helpers.Html
@model MailingList

@if (Model != null && Model.Users != null)
{
    <div class="row table-row">
        <div class="col-xs-1">
        </div>
        <div class="col-xs-6">
            <strong>@Html.LabelFor(e => Model.Users[0].FullName)</strong>
        </div>
        <div class="col-xs-5">
            <strong>@Html.LabelFor(e => Model.Users[0].EmailAddress)</strong>
        </div>
    </div>

    for (int i = 0; i < Model.Users.Count; i++)
    {
        @Html.HiddenFor(e => Model.Users[i].Id)
        @Html.HiddenFor(e => Model.Users[i].FullName)
        @Html.HiddenFor(e => Model.Users[i].EmailAddress)

        <div class="row table-row data-row">
            <div class="col-xs-1">
                @Html.CheckBoxFor(e => Model.Users[i].IsSelected)
            </div>
            <div class="col-xs-6">
                @Html.DisplayFor(e => Model.Users[i].FullName)
            </div>
            <div class="col-xs-5">
                @Html.DisplayFor(e => Model.Users[i].EmailAddress)
            </div>
        </div>
    }
}