@using System.Web.Mvc.Html
@using K9.SharedLibrary.Helpers
@using K9.WebApplication.Helpers
@model K9.WebApplication.ViewModels.MembershipViewModel

@{
    ViewBag.Title = Dictionary.MembershipLabel;
    ViewBag.SubTitle = Dictionary.MembershipLabel;
    Layout = "../Shared/_LayoutForm.cshtml";
}

@Html.Partial("_BetaPopup")

<div class="container main-content">
    <div class="row">
        <div class="text-center">
            @foreach (var membershipModel in Model.MembershipModels)
            {
                <div class="col-md-3 col-sm-12 padding-0">
                    @Html.Partial("_MembershipOption", membershipModel)
                </div>
            }
        </div>
        <div class="col-md-12 col-sm-12">
            <div style="height: 20px;">&nbsp;</div>
            @Html.Separator()
        </div>
        <div class="col-md-6 col-sm-12 padding-0">
            <div style="height: 7px;">&nbsp;</div>
            <div class="membership-description">
                @MvcHtmlString.Create(TemplateProcessor.PopulateTemplate(Dictionary.standard_membership_description,
                    new
                    {
                        NumberOfProfileReadings = Model.MaxNumberOfProfileReadings,
                        NumberOfCompatibilityReadings = Model.MaxNumberOfCompatibilityReadings
                    }))
            </div>
        </div>
        <div class="col-md-6 col-sm-12 padding-0">
            <div style="height: 7px;">&nbsp;</div>
            <div class="membership-description">
                @MvcHtmlString.Create(Dictionary.platinum_membership_description)
            </div>
        </div>
    </div>
</div>
