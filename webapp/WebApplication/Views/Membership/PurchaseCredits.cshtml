@using K9.SharedLibrary.Extensions
@model K9.WebApplication.Models.StripeModel
@{
    ViewBag.Title = Dictionary.PurchaseCredits;
    ViewBag.SubTitle = Dictionary.PurchaseCredits;
    Layout = "../Shared/_LayoutFormSmall.cshtml";
}

@using (Html.BeginForm("PurchaseCreditsProcess", "Membership", FormMethod.Post))
{
    using (Html.BeginBootstrapForm())
    {
        @Html.BootstrapDisplayFor(model => model.Description)
        @Html.BootstrapDisplayFor(model => model.TotalNumberOfCreditsToPurchase)
        @Html.BootstrapDisplayFor(model => model.CreditsPurchaseAmount)
        @Html.HiddenFor(model => model.CreditsPurchaseAmount)
        @Html.HiddenFor(model => model.TotalNumberOfCreditsToPurchase)
        @Html.HiddenFor(model => model.LocalisedCurrencyThreeLetters)
        @Html.HiddenFor(model => model.Description)
        <hr />

        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                data-key="@Model.PublishableKey"
                data-amount="@Model.CreditsPurchaseAmountInCents"
                data-name="@Dictionary.NineStar"
                data-description="@Model.Description"
                data-billing-address="true"
                data-image="@Url.AbsoluteContent("~/Images/icons/logo-small.png")"
                data-locale="@Model.Locale"
                data-zip-code="false"
                data-currency="@Model.LocalisedCurrencyThreeLetters">
        </script>

        <hr />
        @Html.BootstrapActionLinkButton(Dictionary.Back, "PurchaseCreditsStart", "Membership", new { id = Model.MembershipOptionId }, "fa-chevron-left")
    }
}