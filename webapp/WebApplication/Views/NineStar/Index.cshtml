@using K9.WebApplication.Helpers
@model K9.WebApplication.ViewModels.NineStarKiViewModel

@{
    ViewBag.Title = K9.Globalisation.Dictionary.NineStarKiCalculatorTitle;
    ViewBag.SubTitle = K9.Globalisation.Dictionary.PersonalProfileCalculator;
    ViewBag.Keywords = K9.Globalisation.Dictionary.NineStarKiCalculatorKeywords;
    ViewBag.MetaDescription = K9.Globalisation.Dictionary.NineStarKiCalculatorMetaDescription;

    ViewBag.Background = ViewBagHelper.EViewBackground.Jarallax;
    Layout = "../Shared/_LayoutForm.cshtml";
}

@Html.Partial("_BetaPopup")

<div class="container main-content">
    <div class="col-md-4 col-sm-4 padding-0">
        @Html.Partial("_Calculator")
    </div>
    <div class="col-md-8 col-sm-8 padding-0 padding-left-20-desktop">
        @if (Model.NineStarKiModel != null)
        {
            @Html.Partial("_EnergySummary", Model.NineStarKiModel)
        }
    </div>
</div>

@if (Model.NineStarKiModel != null)
{
    <div class="ninestar-summmary container padding-0">
        <h2>@K9.Globalisation.Dictionary.MainEnergy</h2>
        <hr />
        @Html.Partial("_NineStarHeader", Model.NineStarKiModel.MainEnergy)
        <hr />
        @Html.Partial("_NineStarBody", Model.MainEnergyInfo)

        <h2>@K9.Globalisation.Dictionary.EmotionalEnergyLabel</h2>
        <hr />
        @Html.Partial("_NineStarHeader", Model.NineStarKiModel.EmotionalEnergy)
        <hr />
        @Html.Partial("_NineStarBody", Model.EmotionalEnergyInfo)

        <h2>@K9.Globalisation.Dictionary.SurfaceEnergyLabel</h2>
        <hr />
        @Html.Partial("_NineStarHeader", Model.NineStarKiModel.SurfaceEnergy)
        <hr />
        @Html.Partial("_NineStarBody", Model.SurfaceEnergyInfo)
    </div>
}
