@model K9.WebApplication.Models.NineStarKiModel

<div id="energy-summary-container">
    <div class="col-md-4 col-sm-4">
        @Html.Partial("_EnergyTitle", Model.MainEnergy)
    </div>
    <div class="col-md-4 col-sm-4">
        @Html.Partial("_EnergyTitle", Model.EmotionalEnergy)
    </div>
    <div class="col-md-4 col-sm-4">
        @Html.Partial("_EnergyTitle", Model.SurfaceEnergy)
    </div>
    <br />
    <div class="col-md-12">
        <article>
            <br />
            <p>
                <strong>@K9.Globalisation.Dictionary.MainEnergyLabel</strong>: @Model.MainEnergy.FullEnergyNameWithFamilyMember
            </p>
            <p>
                <strong>@K9.Globalisation.Dictionary.EmotionalEnergyLabel</strong>: @Model.EmotionalEnergy.FullEnergyName
            </p>
            <p>
                <strong>@K9.Globalisation.Dictionary.SurfaceEnergyLabel</strong>: @Model.SurfaceEnergy.FullEnergyName
            </p>

            @MvcHtmlString.Create(Model.Summary)
        </article>
    </div>
</div>