@using K9.WebApplication.Helpers
@using K9.WebApplication.Models
@using K9.WebApplication.Options
@model NineStarKiEnergy

@if (Model != null)
{
    <div class="container main-content clear-both">
        <article>
            <div>
                @Html.CollapsiblePanel(Model.FullEnergyDetailsTitle, Model.EnergyDescription, true)

                @if (Model.EnergyType == ENineStarKiEnergyType.CharacterEnergy)
                {
                    @Html.CollapsiblePanel(Html.GetDisplayNameFor(m => Model.ChildDescription), Model.ChildDescription, true)
                }

                @Html.CollapsiblePanel(Html.GetDisplayNameFor(m => Model.Trigram), Model.TrigramDescription, false, "", Model.TrigramUIName, $"Images/ninestar/trigrams/trigram-{Model.Energy}-square.png", EPanelImageSize.Default, EPanelImageLayout.Contain)
            </div>
        </article>
    </div>
}