@using K9.WebApplication.Helpers
@using K9.WebApplication.Models
@model NineStarKiEnergy

@if (Model != null)
{
    <div class="container main-content clear-both ninestar-header-container">
        <article>
            <div>
                @Html.CollapsiblePanel(Model.FullEnergyDetailsTitle, Model.EnergyDescription, true)

                @if (Model.EnergyType == ENineStarKiEnergyType.EmotionalEnergy)
                {
                    @Html.CollapsiblePanel(Html.GetDisplayNameFor(m => Model.ChildDescription), Model.ChildDescription, true)
                }

                @Html.CollapsiblePanel(Html.GetDisplayNameFor(m => Model.Trigram), Model.TrigramDescription, false, "", Model.TrigramUIName, $"Images/ninestar/trigrams/trigram-{Model.Energy}-square.png")
            </div>
        </article>
    </div>
}