@using K9.WebApplication.Helpers
@using K9.WebApplication.Models
@using K9.WebApplication.Options
@model NineStarKiModel

@if (Model != null)
{
    <div class="container main-content clear-both ninestar-header-container">
        <article>
            <div>
                @Html.CollapsiblePanel(Html.GetDisplayNameFor(m => Model.Overview), Model.Overview, true)

                @Html.CollapsiblePanel(Model.MainEnergy.FullEnergyDetailsTitle, Model.MainEnergy.EnergyDescription, false, "", "", $"Images/ninestar/energies/{Model.MainEnergy.EnergyName}.png", EPanelImageSize.Default, EPanelImageLayout.Contain)

                @Html.CollapsiblePanel(Model.MainEnergy.ElementTitle, Model.MainEnergy.ElementDescription, false, "", "", $"Images/ninestar/elements/{Model.MainEnergy.Element}.png", EPanelImageSize.Default, EPanelImageLayout.Contain)

                @Html.CollapsiblePanel(Model.MainEnergy.ModalityTitle, Model.MainEnergy.ModalityDescription, false, "", "", $"Images/ninestar/modalities/{Model.MainEnergy.ModalityName}.png", EPanelImageSize.Default, EPanelImageLayout.Contain)

                @Html.CollapsiblePanel(Html.GetDisplayNameFor(m => Model.Health), Model.Health)

                @Html.CollapsiblePanel(Html.GetDisplayNameFor(m => Model.Occupations), Model.Occupations)

                @Html.CollapsiblePanel(Html.GetDisplayNameFor(m => Model.PersonalDevelopemnt), Model.PersonalDevelopemnt)

                @Html.CollapsiblePanel(Html.GetDisplayNameFor(m => Model.MainEnergy.Trigram), Model.MainEnergy.TrigramDescription, false, "", Model.MainEnergy.TrigramUIName, $"Images/ninestar/trigrams/trigram-{Model.MainEnergy.Energy}-square.png", EPanelImageSize.Default, EPanelImageLayout.Contain)
            </div>
        </article>
    </div>
}