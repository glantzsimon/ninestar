@model K9.WebApplication.Models.NumerologyModel
@using K9.WebApplication.Helpers

@{
    ViewBag.Title = Dictionary.KarmicNumerology;
    ViewBag.SubTitle = Dictionary.KarmicNumerologyCalculator;
    ViewBag.MetaDescription = Dictionary.KarmicNumerologyMetaDescription;
    ViewBag.Keywords = Dictionary.KarmicNumerologyKeywords;

    Layout = "../Shared/_LayoutFormMedium.cshtml";
}

@Html.Partial("_BetaPopup")

<div class="container main-content margin-bottom-0">
    <div class="row">
        <div class="col-md-3 col-sm-3 padding-0">
            @Html.Partial("_CalculatorForm")
        </div>
        <div class="col-md-9 col-sm-9 padding-left-20-desktop padding-right-0 mobile panel-margin-top-20">
            <article>
                @if (Model == null || !Model.IsProcessed)
                {
                    <div class="margin-bottom-20">
                        @Html.Panel(Dictionary.WhatIsKarmicNumerology, Dictionary.karmic_numerology, "karmic-numerology")
                    </div>
                }
            </article>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12 padding-0">
            <article>
                @if (Model != null && Model.IsProcessed)
                {
                    @Html.Panel(Dictionary.KarmicNumerologyDetails, Html.Partial("_Pills", Model).ToString())
                }
                else
                {
                    <hr class="margin-top-0" />
                    @Html.Partial("_ButtonsFooter")
                }
            </article>
        </div>
    </div>
</div>

@Html.Partial("_IndexJs")