@model K9.WebApplication.Models.NumerologyModel

@using (Html.BeginForm("Index", "Numerology", FormMethod.Post))
{
    using (Html.BeginBootstrapForm())
    {
        @Html.BootstrapEditorFor(model => model.PersonModel.Name, new EditorOptions
        {
            Label = Dictionary.OptionalNameLabel
        })
        @Html.BootstrapEditorFor(model => model.PersonModel.DateOfBirth)
        
        <hr />
        @Html.BootstrapButton(Dictionary.Calculate, EButtonType.Submit, "", EButtonClass.Large)
    }
}