@using K9.WebApplication.Enums
@using K9.WebApplication.Helpers
@model K9.WebApplication.Models.NineStarKiModel

@{
    var childClass = Model.PersonModel.IsAdult() ? "" : "child-profile";
}

<div class="text-center">
    <h5>@Dictionary.ClickOnTheNumbersBelowForMoreDetails</h5>
</div>

<div class="row">
    <div class="col-sm-4 col-sm-offset-4 very-small-energy">
        <a href="#" id="epoch-energy">
            @Html.Partial("../NineStarKi/_EnergyTitle", Model.PersonalChartEnergies.Epoch)
        </a>
    </div>
</div>
<div class="row">
    <div class="col-sm-4 col-sm-offset-4 very-small-energy">
        <a href="#" id="generation-energy">
            @Html.Partial("../NineStarKi/_EnergyTitle", Model.PersonalChartEnergies.Generation)
        </a>
    </div>
</div>
<div class="row">
    <div class="col-sm-4 medium-energy">
        <a href="#" id="character-energy">
            @Html.Partial("../NineStarKi/_EnergyTitle", Model.CharacterEnergy)
        </a>
    </div>
    <div class="col-sm-4 @childClass">
        <div class="adult-profile">
            <a href="#" id="fundamental-energy">
                @Html.Partial("../NineStarKi/_EnergyTitle", Model.MainEnergy)
            </a>
        </div>
    </div>
    <div class="col-sm-4 small-energy">
        <a href="#" id="surface-energy">
            @Html.Partial("../NineStarKi/_EnergyTitle", Model.SurfaceEnergy)
        </a>
    </div>
</div>
<div class="row">
    <div class="col-sm-4 col-sm-offset-4 very-small-energy">
        <a href="#" id="daystar-energy">
            @Html.Partial("../NineStarKi/_EnergyTitle", Model.PersonalChartEnergies.Day)
        </a>
    </div>
</div>
@if (Model.IsShowSummary)
{
    <div class="row">
        <div class="col-md-12 margin-top-15 padding-left-0 padding-right-0">
            @Html.Panel(Dictionary.SummaryLabel, Model.Summary)
        </div>
    </div>
}