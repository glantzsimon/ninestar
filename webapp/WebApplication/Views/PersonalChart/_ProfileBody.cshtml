@using K9.WebApplication.Config
@using K9.WebApplication.Helpers
@using K9.WebApplication.Models
@using K9.WebApplication.Options
@model NineStarKiEnergy

@if (Model != null)
{
    <div class="container main-content clear-both">
        <article>
            <div>
                @Html.CollapsiblePanel(Model.EnergyTitle, Model.EnergyDescription, true)

                @if (Model.EnergyType == ENineStarKiEnergyType.CharacterEnergy)
                {
                    @Html.CollapsiblePanel(Html.GetEnergySpecificDisplayNameFor(m => Model.ChildDescription, Model.ElementNameAndNumber), Model.ChildDescription, true)
                }

                @Html.CollapsiblePanel(Html.GetEnergySpecificDisplayNameFor(m => Model.Trigram, Model.ElementNameAndNumber), Model.TrigramDescription, true, "", Model.TrigramUIName, $"{MediaService.BaseImagesPath}/ninestar/trigrams/trigram-{Model.EnergyLowerCase}-square.png", EPanelImageSize.Default, EPanelImageLayout.Contain)
            </div>
        </article>
    </div>
}