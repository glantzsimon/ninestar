@using K9.WebApplication.Helpers
@using K9.WebApplication.Models
@using K9.WebApplication.Options
@model NineStarKiModel

@if (Model != null)
{
    <div class="container main-content clear-both">
        <article>
            <div>
                <ul class="nav nav-tabs nav-justified image-pill">
                    <li class="active">
                        <a data-toggle="tab" href="#e-details">
                            @Model.CharacterEnergy.DescriptiveTitle
                            <div class="img-rounded image-pill" style="background-image: url('@($"../Images/ninestar/energies/{Model.MainEnergy.Energy}.png")');"></div>
                        </a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#e-element">
                            @Model.CharacterEnergy.ElementTitle
                            <div class="img-rounded image-pill" style="background-image: url('@($"../Images/ninestar/elements/{Model.CharacterEnergy.ElementName}.png")');"></div>
                        </a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#e-modality">
                            @Model.CharacterEnergy.ModalityTitle
                            <div class="img-rounded image-pill" style="background-image: url('@($"../Images/ninestar/modalities/{Model.CharacterEnergy.ModalityName}.png")');"></div>
                        </a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#e-trigram">
                            @Dictionary.Trigram
                            <div class="img-rounded image-pill" style="background-image: url('@($"../Images/ninestar/trigrams/trigram-{Model.CharacterEnergy.Energy}-square.png")');"></div>
                        </a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#e-yinyang">
                            @Model.CharacterEnergy.YinYangName
                            <div class="img-rounded image-pill" style="background-image: url('@($"../Images/ninestar/yinyang/{Model.CharacterEnergy.YinYangName}.png")');"></div>
                        </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div id="e-details" class="tab-pane fade in active">
                        @Html.Panel("", $"{Model.CharacterEnergy.EnergyDescription}{Model.CharacterEnergy.ChildDescription}", "", "", EPanelImageSize.Default, EPanelImageLayout.Contain)
                    </div>
                    <div id="e-element" class="tab-pane fade">
                        @Html.Panel("", Model.CharacterEnergy.ElementDescription, "", "", EPanelImageSize.Default, EPanelImageLayout.Contain)
                    </div>
                    <div id="e-modality" class="tab-pane fade">
                        @Html.Panel("", Model.CharacterEnergy.ModalityDescription, "", "", EPanelImageSize.Default, EPanelImageLayout.Contain)
                    </div>
                    <div id="e-trigram" class="tab-pane fade">
                        @Html.Panel("", Model.MainEnergy.TrigramDescription, "", "", EPanelImageSize.Default, EPanelImageLayout.Contain)
                    </div>
                    <div id="e-yinyang" class="tab-pane fade">
                        @Html.Panel("", Dictionary.yinyang, "", "", EPanelImageSize.Default, EPanelImageLayout.Contain)
                    </div>
                </div>
            </div>
            @Html.Partial("_ButtonsFooter")
        </article>
    </div>
}