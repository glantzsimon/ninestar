@using K9.WebApplication.Helpers
@using K9.WebApplication.Models
@using K9.WebApplication.Options
@model NineStarKiModel

@if (Model != null)
{
    <div class="container main-content clear-both">
        @Html.Panel("", Model.Health, "", "", EPanelImageSize.Default, EPanelImageLayout.Contain)

        <br />

        <div class="row">
            <div class="col-xs-12">
                <h3 class="section-title">@Dictionary.StrongOrgans</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                @Html.Raw(Dictionary.StrongOrgansDescription)
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-xs-6 col-sm-3">
                @Html.Partial("DisplayTemplates/Organ", Model.StrongYinOrgans)
            </div>
            <div class="col-xs-6 col-sm-3">
                @Html.Partial("DisplayTemplates/Organ", Model.StrongYangOrgans)
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                <h3 class="section-title">@Dictionary.WeakOrgans</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                @Html.Raw(Dictionary.WeakOrgansDescription)
            </div>
        </div>

        <br />

        <div class="row">
            @foreach (var organ in Model.WeakYinOrgans)
            {
                <div class="col-xs-6 col-sm-3">
                    @Html.Partial("DisplayTemplates/Organ", organ)
                </div>
            }
            @foreach (var organ in Model.WeakYangOrgans)
            {
                <div class="col-xs-6 col-sm-3">
                    @Html.Partial("DisplayTemplates/Organ", organ)
                </div>
            }
        </div>

    </div>
}