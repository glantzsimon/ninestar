@using K9.SharedLibrary.Extensions
@using K9.WebApplication.Enums
@using K9.WebApplication.Extensions
@using K9.WebApplication.Helpers
@using K9.WebApplication.Models
@model NineStarKiModel


<div class="ninestar-summmary container padding-0">
    <div class="row">
        <div class="col-sm-20">
            @Html.Partial("_DateSelector")
        </div>
    </div>

    <ul class="nav nav-pills nav-justified image-pill">
        <li class="active">
            <a data-toggle="tab" href="#current-monthly-cycle">
                @Dictionary.MonthlyPrediction
                <div class="img-rounded image-pill" style="background-image: url('Images/ui/moon.png');"></div>
            </a>
        </li>

        <li>
            <a data-toggle="tab" href="#current-yearly-cycle">
                @Dictionary.YearlyPrediction
                <div class="img-rounded image-pill" style="background-image: url('Images/ui/sun.png');"></div>
            </a>
        </li>

        <li>
            <a data-toggle="tab" href="#monthly-planner">
                @Dictionary.MonthlyPlanner
                <div class="img-rounded image-pill" style="background-image: url('Images/ui/monthly-planner.png');"></div>
            </a>
        </li>

        <li>
            <a data-toggle="tab" href="#yearly-planner">
                @Dictionary.YearlyPlanner
                <div class="img-rounded image-pill" style="background-image: url('Images/ui/yearly-planner.png');"></div>
            </a>
        </li>
    </ul>

    <div class="tab-content">
        <div id="current-monthly-cycle" class="tab-pane fade in active">
            @Html.Panel("", Dictionary.month_description)

            @using (Html.PayWall(ESection.Predictions, Model))
            {
                @Html.Partial("_Cycle", Model.MonthlyCycleEnergy)
            }

            @Html.Partial("_ButtonsFooter")
        </div>

        <div id="current-yearly-cycle" class="tab-pane fade">
            @Html.Panel("", Dictionary.year_description)

            @using (Html.PayWall(ESection.Predictions, Model))
            {
                @Html.Partial("_Cycle", Model.YearlyCycleEnergy)
            }

            @Html.Partial("_ButtonsFooter")
        </div>

        <div id="yearly-planner" class="tab-pane fade">
            @using (Html.PayWall(ESection.Predictions, Model))
            {
                @Html.Partial("_YearlyPlanner", Model)
            }

            @Html.Partial("_ButtonsFooter")
        </div>

        <div id="monthly-planner" class="tab-pane fade">
            @using (Html.PayWall(ESection.Predictions, Model))
            {
                @Html.Partial("_MonthlyPlanner", Model)
            }

            @Html.Partial("_ButtonsFooter")
        </div>
    </div>
</div>
