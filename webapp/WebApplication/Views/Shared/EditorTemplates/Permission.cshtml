@using K9.Base.WebApplication.Extensions
@using K9.Base.WebApplication.Helpers
@using K9.WebApplication.Enums
@using K9.WebApplication.Extensions
@model int?
@{
    var selectList = this.GetDropdownData().GetSelectList<Permission>(Model, true);
}
@if (this.GetDeviceType() == EDeviceType.Desktop)
{
    @Html.BootstrapDropdownFor(model => model, selectList)
}
else
{
    @Html.DropDownListFor(model => model, selectList, new { @class = "form-control" })
}
