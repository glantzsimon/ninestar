@using K9.Base.WebApplication.Extensions
@using K9.WebApplication.Enums
@using K9.WebApplication.Extensions
@model int?
@{
    var selectList = this.GetDropdownData().GetSelectList<Promotion>(Model, true, "Name");
}
@if (this.GetDeviceType() == EDeviceType.Desktop)
{
    @Html.BootstrapDropdownFor(model => model, selectList, false, null, Dictionary.None)
}
else
{
    @Html.DropDownListFor(model => model, selectList, Dictionary.None, new { @class = "form-control" })
}
