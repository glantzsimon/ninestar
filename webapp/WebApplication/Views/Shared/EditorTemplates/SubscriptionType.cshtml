@using K9.Base.WebApplication.Extensions
@using K9.Base.WebApplication.Helpers
@model MembershipOption.ESubscriptionType
@{
    var selectList = this.GetDropdownData().GetSelectListFromEnum<MembershipOption.ESubscriptionType>(Convert.ToInt32(Model), true);
}
<div class="desktop-only">
    @Html.BootstrapDropdownFor(model => model, selectList)
</div>
<div class="device-only">
    @Html.DropDownListFor(model => model, selectList, new { @class = "form-control" })
</div>