@using K9.Base.WebApplication.Extensions
@using K9.SharedLibrary.Models
@model string

<div class="desktop-only">
    @Html.BootstrapDropdownFor(model => model, this.GetDropdownData().GetSelectListFromCustomDataset<K9.DataAccessLayer.Models.TimeZone>(K9.DataAccessLayer.Models.TimeZone.ExtendedTimeZones, Model))
</div>
<div class="device-only">
    @Html.DropDownListFor(model => model, this.GetDropdownData().GetSelectListFromCustomDataset<K9.DataAccessLayer.Models.TimeZone>(K9.DataAccessLayer.Models.TimeZone.ExtendedTimeZones, Model), new { @class = "form-control" })
</div>