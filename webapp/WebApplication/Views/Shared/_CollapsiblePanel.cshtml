@model K9.WebApplication.Options.CollapsiblePanelOptions
@{
    var id = Guid.NewGuid();
}
<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" href="#@id">@Model.Title</a>
            </h4>
        </div>
        <div id="@id" class="panel-collapse collapse">
            <div class="panel-body">@Model.Body</div>
            @if (!string.IsNullOrEmpty(Model.Footer))
            {
                <div class="panel-footer">@Model.Footer</div>
            }
        </div>
    </div>
</div>