@using K9.WebApplication.Services
@if (CookieService.IsDisplayCookiesWarning())
{
    <div id="cookie-warning-container">
        <div class="alert alert-success alert-dismissable fade in">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a> <strong>@Dictionary.CookiesTitle</strong>
            <span>@MvcHtmlString.Create(Dictionary.cookies_blurb)</span>
        </div>
    </div>
    CookieService.HideCookiesWarning();
}