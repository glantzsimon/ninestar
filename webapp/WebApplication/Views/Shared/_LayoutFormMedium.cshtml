@{
	Layout = "~/Views/Shared/_LayoutFormMaster.cshtml";
}
@section formLayout
{
	<div class="page alphaBackground shadow roundCorners medium-form">
		@if (!string.IsNullOrEmpty(ViewBag.SubTitle))
		{
			<div class="page-header">
				<h1><strong>@Html.Raw(ViewBag.SubTitle)</strong></h1>
			</div>
		}
		else
		{
		    <div class="page-header-mobile"></div> 
		}
		@RenderBody()
	</div>
}