<div class="banner">
	<div class="header">
		<div class="container">
			<div class="header-left">
				<div class="w3layouts-logo">
					<h1>
						<a href="~/">Global <span>@WebsiteConfiguration.Instance.CompanyName</span></a>
					</h1>
				</div>
			</div>
			<div class="header-right">
