@model Student
@{
	ViewBag.Title = string.Format("Student {0}", Dictionary.Details);
	Layout = "~/Views/Shared/_LayoutForm.cshtml";
}
@using (Html.BeginForm())
{
	using (Html.BeginBootstrapForm())
	{
	@Html.HiddenFor(model => model.Id)
	@Html.Partial("_DisplayFields")
	@Html.AuditFieldsForModel(Model)
	
	@Html.SubTitle(Dictionary.AdditionalInformation)
	@Html.BootstrapLinkToCollectionButton("Enrollments", "Index", "Enrollments", Model.Id)

	<hr />
	@Html.BootstrapBackToListButton()
	@Html.BootstrapLinkToEditButton(Model.Id)
	@Html.BootstrapLinkToDeleteButton(Model.Id)
	}
}