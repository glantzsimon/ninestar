@model User

@using (Html.BeginForm())
{
	using (Html.BeginBootstrapForm())
	{
		@Html.HiddenFor(model => model.Id)
		@Html.Partial("_EditFields")
		<hr/>
		@Html.BootstrapButton(Dictionary.Update)
		if (!WebSecurity.IsConfirmed(Model.Username))
		{
			@Html.BootstrapLinkButton(Dictionary.ActivateAccount, "ActivateAccount", "Account")
		}
		@Html.BootstrapBackToListButton()
	}
}